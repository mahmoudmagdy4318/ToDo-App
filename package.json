{
  "name": "todo-app-mvp",
  "version": "1.0.0",
  "description": "Simple Todo App MVP with Node.js, Express, Prisma, and EJS",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run build:client",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/ public/ views/",
    "type-check": "tsc --noEmit",
    "playwright:install": "npx playwright install --with-deps",
    "playwright:test": "npx playwright test",
    "playwright:test:ui": "npx playwright test --ui",
    "playwright:test:headed": "npx playwright test --headed",
    "start:e2e": "tsx src/server.ts",
    "e2e": "cross-env PORT=3100 E2E_BASE_URL=http://localhost:3100 start-server-and-test \"npm run start:e2e\" http://localhost:3100 playwright:test"
  },
  "keywords": [
    "todo",
    "typescript",
    "express",
    "prisma",
    "ejs"
  ],
  "author": "Todo App Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "playwright": "^1.45.0",
    "prettier": "^3.2.4",
    "prisma": "^5.8.0",
    "start-server-and-test": "^2.1.3",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
